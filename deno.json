{
	"compilerOptions": {
		"lib": ["deno.window", "deno.ns"],
		"strict": true
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 80,
		"indentWidth": 2,
		"semiColons": false,
		"singleQuote": true,
		"proseWrap": "preserve",
		"include": ["src/", "www/", "deno.json", "README.md"]
	},
	"lint": {
		"include": ["src/"],
		"rules": {
			"tags": ["recommended"],
			"include": [
				"camelcase",
				"eqeqeq",
				"explicit-function-return-type",
				"explicit-module-boundary-types",
				"no-sparse-arrays",
				"single-var-declarator",
				"no-non-null-assertion"
			]
		}
	},
	"tasks": {
		"build": "deno bundle src/index.ts -o www/index.js --platform browser --minify",
		"watch": "deno bundle src/index.ts -o www/index.js --platform browser --watch"
	},
	"exclude": [
		".deno/"
	],
	"imports": {
		"@std/assert": "jsr:@std/assert@^1.0.14"
	}
}
